@prefix owl:   <http://www.w3.org/2002/07/owl#> .
@prefix u:  <http://tardis.ed.ac.uk/~wwaites/units#> .
@prefix : <http://tardis.ed.ac.uk/~wwaites/conversions#> .

:ScalarConversion a owl:Class .
:fromUnit a owl:ObjectProperty .
:toUnit a owl:ObjectProperty .
:factor a owl:DatatypeProperty .

[ a :ScalarConversion ;
    :fromUnit u:t ;
    :toUnit u:kg ;
    :factor 1000.0 ] .

[ a :ScalarConversion ;
    :fromUnit u:kg ;
    :toUnit u:g ;
    :factor 1000.0 ] .

[ a :ScalarConversion ;
    :fromUnit u:g ;
    :toUnit u:mg ;
    :factor 1000.0 ] .

[ a :ScalarConversion ;
    :fromUnit u:mg ;
    :toUnit u:mcg ;
    :factor 1000.0 ] .

[ a :ScalarConversion ;
    :fromUnit u:kg ;
    :toUnit u:lb ;
    :factor 2.2 ] .

[ a :ScalarConversion ;
    :fromUnit u:stone ;
    :toUnit u:lb ;
    :factor 14.0 ] .
